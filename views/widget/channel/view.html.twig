    <form method="post" action="{{ url(modelName ~ ".update", {'id': data.model._id}) }}">
        <input type="hidden" id="_method" name="_method" value="PUT"/>
        <button class="btn btn-block btn-danger" type="submit">{{ 'crud.base.update'|trans }}</button>
    </form>

    <td>
        <button data-url="{{ url(modelName ~ ".delete", {'id': data.model._id}) }}" class="btn btn-block btn-danger remove" type="submit">{{ 'crud.base.delete'|trans }}</button>
    </td>

    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
                <table class="table table-condensed">
                    <tbody>
                    <tr>
                        <th style="width: 150px">{{ 'crud.base.key'|trans }}</th>
                        <th>{{ 'crud.base.value'|trans }}</th>
                    </tr>
                    <tr>
                        <td>{{ 'model.channel.name'|trans }}</td>
                        <td>{{ data.model.name|default('') }}</td>
                    </tr>
                    <tr>
                        <td>{{ 'model.channel.type'|trans }}</td>
                        <td>{{ data.model.type|default('') }}</td>
                    </tr>
                    <tr>
                        <td>{{ 'model.channel.url'|trans }}</td>
                        <td>{{ data.model.url|default('') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

    <!-- modal -->
    {% include 'general/_modal.html.twig' with {'url': data} %}
    <!-- ./ modal -->

